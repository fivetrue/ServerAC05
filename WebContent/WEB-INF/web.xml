<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<!-- App Config  -->
	<servlet>
		<servlet-name>appConfig</servlet-name>
		<jsp-file>/config/GetAppConfig.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>appConfig</servlet-name>
		<url-pattern>/api/config/appconfig</url-pattern>
	</servlet-mapping>
	
	<!-- User  -->
	<servlet>
		<servlet-name>registerUser</servlet-name>
		<jsp-file>/user/RegisterUser.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>registerUser</servlet-name>
		<url-pattern>/api/user/register</url-pattern>
	</servlet-mapping>	
	
	<!-- Naver  -->
	
	<servlet>
		<servlet-name>naverLogin</servlet-name>
		<jsp-file>/naver/NaverLogin.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>naverCafeSignup</servlet-name>
		<jsp-file>/naver/CafeSignup.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>naverCallback</servlet-name>
		<jsp-file>/naver/ServiceCallback.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>requestToken</servlet-name>
		<jsp-file>/naver/RequestToken.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>naverLogin</servlet-name>
		<url-pattern>/api/naver/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>naverCafeSignup</servlet-name>
		<url-pattern>/api/naver/cafesignup</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>naverCallback</servlet-name>
		<url-pattern>/naver/callback</url-pattern>

	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>requestToken</servlet-name>
		<url-pattern>/api/token</url-pattern>
	</servlet-mapping>
	
	
	<!-- News feeds -->
	<servlet>
		<servlet-name>gettingData</servlet-name>
		<jsp-file>/info/GettingData.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>gettingData</servlet-name>
		<url-pattern>/api/data/getting</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>pageData</servlet-name>
		<jsp-file>/info/PageData.jsp</jsp-file>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>pageData</servlet-name>
		<url-pattern>/api/data/page</url-pattern>
	</servlet-mapping>
	
	<!-- 설정 -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.gif</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.jpg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.png</url-pattern>
    </servlet-mapping>

</web-app>  